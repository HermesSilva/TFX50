{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, // deixe em false se não pretende usar reflect-metadata
    "useDefineForClassFields": true, // compatível com os novos decorators ECMAScript
    //"types": [ "node", "undici-types" ],
    "target": "ES2022",
    "module": "system",
    "outFile": "./wwwroot/js/TFX.Core.js",
    "sourceRoot": "./",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "ES2022", "DOM", "ES6" ]
  },
  "include": [
    "src/**/*.ts",
    "./_references.ts"
  ]
}
